@model IEnumerable<WebApplication1.Models.Vacancy>

@{
    ViewData["Title"] = "Vacancy Management";
}

<div class="row">
    <div class="col-12">
        <h2><i class="fas fa-briefcase"></i> Vacancy Management</h2>
        <p class="text-muted">Manage Job Vacancies</p>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col-12 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Vacancy
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Warehouse</th>
                                    <th>Applications</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vacancy in Model)
                                {
                                    <tr>
                                        <td>@vacancy.Name</td>
                                        <td>@vacancy.Description.Substring(0, Math.Min(50, vacancy.Description.Length))...</td>
                                        <td>@vacancy.Warehouse.Name</td>
                                        <td>
                                            <span class="badge bg-info">@vacancy.JobApplications.Count</span>
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@vacancy.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@vacancy.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No vacancies found. Click "Add Vacancy" to create one.
                    </div>
                }
            </div>
        </div>
    </div>
</div>