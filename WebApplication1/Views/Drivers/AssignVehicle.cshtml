@model WebApplication1.ViewModels.AssignVehicleViewModel

@{
    ViewData["Title"] = "Assign Vehicle to Driver";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-truck-loading"></i> Assign Vehicle to Driver</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> 
                    <strong>Note:</strong> Only drivers without assigned vehicles and available vehicles are shown.
                </div>

                <form asp-action="AssignVehicle" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="DriverId" class="form-label">
                            <i class="fas fa-user"></i> Select Driver
                        </label>
                        <select asp-for="DriverId" class="form-select" asp-items="Model.Drivers">
                            <option value="">-- Select Driver --</option>
                        </select>
                        <span asp-validation-for="DriverId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="VehicleId" class="form-label">
                            <i class="fas fa-car"></i> Select Vehicle
                        </label>
                        <select asp-for="VehicleId" class="form-select" asp-items="Model.Vehicles">
                            <option value="">-- Select Vehicle --</option>
                        </select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Drivers
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i> Assign Vehicle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@* 
Purpose: Drivers/AssignVehicle.cshtml form for assigning vehicles to drivers.
- Dropdowns only show available drivers and vehicles
- Prevents assigning same vehicle to multiple drivers
- Creates notification for driver when assigned
- Logs activity when assignment is made
- One-to-one relationship enforcement
*@