@model WebApplication1.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-trash"></i> Delete Vehicle</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> 
                    Are you sure you want to delete this vehicle?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">Make:</dt>
                    <dd class="col-sm-9">@Model.Make</dd>
                    
                    <dt class="col-sm-3">Model:</dt>
                    <dd class="col-sm-9">@Model.Model</dd>
                    
                    <dt class="col-sm-3">License Plate:</dt>
                    <dd class="col-sm-9"><span class="badge bg-secondary">@Model.LicensePlate</span></dd>
                    
                    <dt class="col-sm-3">Warehouse:</dt>
                    <dd class="col-sm-9">@Model.Warehouse.Name</dd>
                    
                    <dt class="col-sm-3">Assigned Driver:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Driver != null)
                        {
                            <span class="badge bg-warning">@Model.Driver.User.FullName</span>
                        }
                        else
                        {
                            <span class="text-muted">Not assigned</span>
                        }
                    </dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>