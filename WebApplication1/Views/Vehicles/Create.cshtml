@model WebApplication1.Models.Vehicle

@{
    ViewData["Title"] = "Create Vehicle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-car"></i> Add New Vehicle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Make" class="form-label"></label>
                            <input asp-for="Make" class="form-control" placeholder="e.g., Toyota" />
                            <span asp-validation-for="Make" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="e.g., Hiace" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LicensePlate" class="form-label"></label>
                            <input asp-for="LicensePlate" class="form-control" placeholder="e.g., GP123ABC" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="WarehouseId" class="form-label"></label>
                            <select asp-for="WarehouseId" class="form-select" asp-items="ViewBag.WarehouseId">
                                <option value="">-- Select Warehouse --</option>
                            </select>
                            <span asp-validation-for="WarehouseId" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="VehicleImagePath" class="form-label"></label>
                        <input asp-for="VehicleImagePath" class="form-control" placeholder="Optional: path/to/image.jpg" />
                        <span asp-validation-for="VehicleImagePath" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Vehicle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>