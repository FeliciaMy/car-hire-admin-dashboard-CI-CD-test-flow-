@model IEnumerable<WebApplication1.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicle Management";
}

<div class="row">
    <div class="col-12">
        <h2><i class="fas fa-car"></i> Vehicle Management</h2>
        <p class="text-muted">Manage Fleet Vehicles</p>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col-12 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Vehicle
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>Make</th>
                                    <th>Model</th>
                                    <th>License Plate</th>
                                    <th>Warehouse</th>
                                    <th>Assigned Driver</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vehicle in Model)
                                {
                                    <tr>
                                        <td>@vehicle.Make</td>
                                        <td>@vehicle.Model</td>
                                        <td><span class="badge bg-secondary">@vehicle.LicensePlate</span></td>
                                        <td>@vehicle.Warehouse.Name</td>
                                        <td>
                                            @if (vehicle.Driver != null)
                                            {
                                                <span class="badge bg-success">@vehicle.Driver.User.FullName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No vehicles found. Click "Add Vehicle" to create one.
                    </div>
                }
            </div>
        </div>
    </div>
</div>